extends ../layout
block head 
   link(rel="stylesheet" href="./static/success.css")
block content
   div.body-page(style="background-image: url(./static/images/pi_greco.jpg);")
     div.header-container
       div.header-text
          h1.selezione Seleziona la tua classe  
          each classe in classi 
           div.button-container
            button.bottone(href='#'+classe.id type="button" onClick="sendTest(this)") 
              p #{classe.label}
          form.religione-section
              h2 Fai religione?
              input(type="radio" name="religione" value=0 checked="checked") 
              span Si
              input(type="radio" name="religione" value=1) 
              span No
block scripts 
    script.
      if (typeof (Storage) !== "undefined") {
        sessionStorage.setItem('ServerIp','#{ServerIp}');
      };
    script(src="./static/sceltaClasse.js")
    script(src="./static/nanoajax.min.js")